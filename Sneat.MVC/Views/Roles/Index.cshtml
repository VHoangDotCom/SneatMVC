@{
    Layout = "~/Views/Shared/_SneatProLayout.cshtml";
    ViewData["title"] = "Role management";
}

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="py-3 mb-4"><span class="text-muted fw-light" @*data-i18n="User"*@>Quản lý phân quyền /</span> Phân quyền</h4>

        <div class="card">
            <h5 class="card-header" @*data-i18n="User"*@>Danh sách vai trò</h5>
            <div class="row mb-2  px-md-4 px-2">
                <div class="col-md-4 offset-md-0">
                    <div class="input-group input-group-merge">
                        <span class="input-group-text" id="basic-addon-search31"><i class="bx bx-search"></i></span>
                        <input type="text" class="form-control " id="txt-key-search" placeholder="Tên vai trò" onchange="searchUser()" />
                    </div>
                </div>

            </div>
            <div class="row mb-2 px-md-4 px-2">
                <div class="col-md-12 mb-2">
                    <button type="button"
                            class="btn btn-primary"
                            data-bs-toggle="modal"
                            data-bs-target="#addRoleModal"
                            style="float: right">
                        <i class='menu-icon tf-icons bx bx-plus'></i>
                        Thêm mới
                    </button>
                    @*<button class="btn btn-primary" id="shepherd-example">Start tour</button>*@
                </div>
            </div>

            <div class=" table-responsive px-md-4 px-2" id="list_role">
                @{ Html.RenderAction("SearchRole", "Roles", new { Page = 1, search = "" }); }
            </div>
        </div>

    </div>

    <div class="content-backdrop fade"></div>
</div>

<div class="modal fade" id="addRoleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel4">Modal title</h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="col-md-12 col-12">
                    <div class="card mb-md-0 mb-4">
                        <h5 class="card-header">Checkboxes</h5>
                        <div class="card-body">
                            <div id="tree-role"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal">
                    Close
                </button>
                <button type="button" onclick="treeData();" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
@Scripts.Render("~/Scripts/ScriptModel/permission-scipt.js")

<script>
    function treeData() {
        var permissionsTree = JSON.parse('@Html.Raw(Json.Encode(ViewBag.PermissionOptionTree))');
        console.log(permissionsTree)
    }
</script>